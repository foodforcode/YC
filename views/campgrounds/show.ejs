<%- include("../partials/headers") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<p><a href="/campgrounds" class="btn btn-info">Return</a></p>
			<div class="list-group">
				<li class="list-group-item">Uno</li>
				<li class="list-group-item">Dos</li>
				<li class="list-group-item">Tres</li>
			</div>
			MAP SPACE
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption">
					<h4 class="pull-right">$18.00/night</h4>
					<h4><a><%= campground.name %></a></h4>
					<p><%= campground.description %></p>
					<p>
						<em>Submitted by: <span style="text-transform: lowercase;"><%= campground.author.username %></span></em></p>
					<% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
					<a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
					<form class="delete" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
						<button class="btn btn-danger">
							Delete
						</button>
					</form>
				<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){ %>
				<div class="row align-right">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
						<p><%= comment.text %></p>
						<div class="pull-right">
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							   
							<a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
							<form class="delete" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
							<input type="submit" class="btn btn-xs btn-danger" value="Delete">
							</form>
						<% } %>
						</div>
					</div>
				</div>
	<% }); %>
			</div>
		</div>
	</div>
</div>

<div class="container">
	
</div>

<%- include("../partials/footer") %>